{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES5",
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}